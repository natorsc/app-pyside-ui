name: Publish package to PyPI with PDM ðŸ“¦.
on:
  push:
    branches: ["main"]
  workflow_dispatch:
jobs:
  pypi-publish:
    name: Upload release to PyPI ðŸŒŽ.
    runs-on: ubuntu-latest
    environment:
      name: testpypi
      url: https://pypi.org/p/app-pyside-ui
    permissions:
      contents: read
      id-token: write
    steps:
      - uses: actions/checkout@v4
      - uses: pdm-project/setup-pdm@v4
        with:
          cache: true
          python-version: 3.11
      - name: PDM build package ðŸ”¨.
        run: |
          pdm install
          pdm build
      - name: Publish package distributions to TestPyPI ðŸš€.
        uses: pypa/gh-action-pypi-publish@release/v1
        with:
          repository-url: https://test.pypi.org/legacy/
          password: ${{ secrets.TEST_PYPI }}
      - name: Upload artifact ðŸ’¾.
        uses: actions/upload-artifact@v4
        with:
          name: "python-package"
          path: |
            dist/*.whl
            dist/*.tar.gz
